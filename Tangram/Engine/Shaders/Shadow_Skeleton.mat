#order 0
#material
#vertex
#version 460 core
// #extension GL_ARB_shader_draw_parameters : require

// #extension GL_ARB_shader_storage_buffer_object : require
layout (std430, binding = 0) buffer CB0
{
    mat4 Transforms[];
};

layout (location = 0) in vec3 pos;
layout (location = 1) in vec2 uv;
layout (location = 2) in vec3 norm;
layout (location = 3) in uvec4 boneId;
layout (location = 4) in vec4 weights;
uniform int boneCount;
uniform mat4 pmat;
// uniform mat4 tmat;

mat4 getFinalMat()
{
    mat4 fm = weights[0] * Transforms[gl_InstanceID + gl_BaseInstance + boneId[0]];
    if (weights[1] != 0)
        fm += Transforms[gl_InstanceID + gl_BaseInstance + boneId[1]] * weights[1];
    if (weights[2] != 0)
        fm += Transforms[gl_InstanceID + gl_BaseInstance + boneId[2]] * weights[2];
    if (weights[3] != 0)
        fm += Transforms[gl_InstanceID + gl_BaseInstance + boneId[3]] * weights[3];
    return fm;
}

void main()
{
    gl_Position = pmat * getFinalMat() * vec4(pos, 1.0);
}
#fragment
#version 410 core

void main()
{
}